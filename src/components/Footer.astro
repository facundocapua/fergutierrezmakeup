---
import {CONTACT_INFO} from '@/data/general'
const {email, phone, whatsapp, address, social } = CONTACT_INFO
---
<footer class="max-w-6xl mx-auto flex justify-between mb-12">
  <section>
    <h4 class="text-lg text-gray-700 my-2 uppercase">Nuestra redes sociales</h4>
    <div class="flex gap-3 items-center">
        {social.map(({name, link, icon, class: className}) => (
          <a href={link} title={name} aria-label={link} rel="nofollow noreferrer" target="_blank">
            <img class={`${className} hover:scale-125 transition-all duration-15`} src={icon} />
          </a>
        ))}
    </div>
  </section>  
  <section>
    <h4 class="text-lg text-gray-700 my-2 uppercase">Contacto</h4>
    <div class="flex flex-col gap-2">
      <a href={`mailto:${email}`} class="flex items-center gap-2 text-sm">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4">
          <path d="M1.5 8.67v8.58a3 3 0 003 3h15a3 3 0 003-3V8.67l-8.928 5.493a3 3 0 01-3.144 0L1.5 8.67z" />
          <path d="M22.5 6.908V6.75a3 3 0 00-3-3h-15a3 3 0 00-3 3v.158l9.714 5.978a1.5 1.5 0 001.572 0L22.5 6.908z" />
        </svg>        
        {email}
      </a>

      <a href={`sms:${phone}`} class="flex items-center gap-2 text-sm">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4">
          <path fill-rule="evenodd" d="M1.5 4.5a3 3 0 013-3h1.372c.86 0 1.61.586 1.819 1.42l1.105 4.423a1.875 1.875 0 01-.694 1.955l-1.293.97c-.135.101-.164.249-.126.352a11.285 11.285 0 006.697 6.697c.103.038.25.009.352-.126l.97-1.293a1.875 1.875 0 011.955-.694l4.423 1.105c.834.209 1.42.959 1.42 1.82V19.5a3 3 0 01-3 3h-2.25C8.552 22.5 1.5 15.448 1.5 6.75V4.5z" clip-rule="evenodd" />
        </svg>    
        {phone}
      </a>

      <a href={address.map} rel="nofollow noreferrer" class="flex items-center gap-2 text-sm">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4">
          <path fill-rule="evenodd" d="M11.54 22.351l.07.04.028.016a.76.76 0 00.723 0l.028-.015.071-.041a16.975 16.975 0 001.144-.742 19.58 19.58 0 002.683-2.282c1.944-1.99 3.963-4.98 3.963-8.827a8.25 8.25 0 00-16.5 0c0 3.846 2.02 6.837 3.963 8.827a19.58 19.58 0 002.682 2.282 16.975 16.975 0 001.145.742zM12 13.5a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd" />
        </svg>
        {address.street}
      </a>
    </div>
  </section>
</footer>

<div>
  <a href={`https://wa.me/${whatsapp}`} target="_blank" rel="noreferrer nofollow">
    <img class="w-16 fixed bottom-0 right-0 m-4" src="/assets/whatsapp.svg" />
  </a>
</div>