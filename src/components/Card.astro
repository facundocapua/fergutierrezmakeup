---
const { image, title, description } = Astro.props
---
<div class="bg-gray-800 py">
  <div class="relative w-full aspect-[3/4] overflow-hidden 
      before:absolute before:bottom-4 before:right-4 before:h-0 before:w-0 before:border-b before:border-r before:transition-all before:duration-500 before:ease-in-out 
      after:absolute after:top-4 after:left-4 after:h-0 after:w-0 after:border-t after:border-l after:transition-all after:duration-500 after:ease-in-out
      hover:before:w-[calc(100%-32px)] hover:before:h-[calc(100%-32px)] hover:after:h-[calc(100%-32px)] hover:after:w-[calc(100%-32px)]
      ">
    <img src={image} />
  </div>
  <h2 class="text-xl font-extralight text-center py-4 text-white">{title}</h2>
  <p class="text-gray-200 text-center font-extralight">{description}</p>
</div>